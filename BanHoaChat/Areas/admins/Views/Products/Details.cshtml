@model BanHoaChat.Models.Product

@{
    ViewData["Title"] = "Chi Tiết Sản Phẩm";
    Layout = "~/Areas/admins/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    /* Main Container */
    .product-detail-container {
    max-width: 1200px;
    margin: 2rem auto;
    padding: 0 15px;
    }

    /* Product Title */
    .product-title {
    font-size: 2.2rem;
    font-weight: 700;
    color: #2d3748;
    margin-bottom: 1.5rem;
    position: relative;
    padding-bottom: 0.5rem;
    }

    .product-title::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 80px;
    height: 4px;
    background: #3b82f6;
    border-radius: 2px;
    }

    /* Card Styling */
    .product-card {
    border: none;
    border-radius: 12px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .product-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.12);
    }

    /* Product Image */
    .product-image-container {
    padding: 1.5rem;
    background: #f8fafc;
    text-align: center;
    border-bottom: 1px solid #e2e8f0;
    }

    .product-image {
    max-width: 100%;
    height: auto;
    max-height: 400px;
    object-fit: contain;
    border-radius: 8px;
    }

    .no-image {
    display: inline-block;
    padding: 2rem;
    background: #e2e8f0;
    border-radius: 8px;
    color: #64748b;
    }

    /* Details Section */
    .product-details {
    padding: 2rem;
    }

    .detail-row {
    display: flex;
    margin-bottom: 1.2rem;
    padding-bottom: 1rem;
    border-bottom: 1px dashed #e2e8f0;
    }

    .detail-label {
    flex: 0 0 30%;
    font-weight: 600;
    color: #4a5568;
    }

    .detail-value {
    flex: 1;
    color: #2d3748;
    }

    /* Price Styling */
    .price-value {
    font-size: 1.5rem;
    font-weight: 700;
    color: #ef4444;
    }

    /* Stock Quantity */
    .stock-value {
    font-weight: 600;
    color: #10b981;
    }

    /* Buttons */
    .action-buttons {
    margin-top: 2rem;
    display: flex;
    gap: 1rem;
    }

    .btn-edit {
    background-color: #f59e0b;
    border: none;
    padding: 0.6rem 1.5rem;
    font-weight: 500;
    }

    .btn-edit:hover {
    background-color: #d97706;
    }

    .btn-back {
    background-color: #64748b;
    border: none;
    padding: 0.6rem 1.5rem;
    font-weight: 500;
    }

    .btn-back:hover {
    background-color: #475569;
    }

    /* Responsive */
    @@media (max-width: 768px) {
    .product-title {
    font-size: 1.8rem;
    }

    .detail-row {
    flex-direction: column;
    }

    .detail-label {
    margin-bottom: 0.5rem;
    }

    .action-buttons {
    flex-direction: column;
    gap: 0.5rem;
    }
    }
</style>

<div class="product-detail-container">
    <h1 class="product-title">Chi Tiết Sản Phẩm</h1>

    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="product-card">
                <!-- Product Image -->
                <div class="product-image-container">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" alt="Product Image" class="product-image" />
                    }
                    else
                    {
                        <div class="no-image">
                            <i class="bi bi-image" style="font-size: 2rem;"></i>
                            <p class="mt-2">No Image Available</p>
                        </div>
                    }
                </div>

                <!-- Product Details -->
                <div class="product-details">
                    <div class="detail-row">
                        <div class="detail-label">@Html.DisplayNameFor(model => model.Description)</div>
                        <div class="detail-value">@Html.DisplayFor(model => model.Description)</div>
                    </div>
                    <div class="detail-row">
                        <div class="detail-label">@Html.DisplayNameFor(model => model.Price)</div>
                        <div class="detail-value price-value">@Model.Price.ToString("N0") VNG</div>
                    </div>

                    <div class="detail-row">
                        <div class="detail-label">@Html.DisplayNameFor(model => model.StockQuantity)</div>
                        <div class="detail-value stock-value">@Html.DisplayFor(model => model.StockQuantity)</div>
                    </div>

                    <div class="detail-row">
                        <div class="detail-label">Lượt Xem</div>
                        <div class="detail-value">@Html.DisplayFor(model => model.ViewCount)</div>
                    </div>

                    <div class="detail-row">
                        <div class="detail-label">@Html.DisplayNameFor(model => model.CreatedAt)</div>
                        <div class="detail-value">@Html.DisplayFor(model => model.CreatedAt)</div>
                    </div>

                    <div class="detail-row">
                        <div class="detail-label">@Html.DisplayNameFor(model => model.UpdatedAt)</div>
                        <div class="detail-value">@Html.DisplayFor(model => model.UpdatedAt)</div>
                    </div>

                    <div class="detail-row">
                        <div class="detail-label">@Html.DisplayNameFor(model => model.Category)</div>
                        <div class="detail-value">@Html.DisplayFor(model => model.Category.Name)</div>
                    </div>

                    <div class="action-buttons">
                        <a asp-action="Edit" asp-route-id="@Model?.ProductId" class="btn btn-edit text-white">
                            <i class="bi bi-pencil-square me-2"></i>Sửa
                        </a>
                        <a asp-action="Index" class="btn btn-back text-white">
                            <i class="bi bi-arrow-left me-2"></i>Quay lại
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>