<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="icon" href="~/assets/images/logo.png" type="image/x-icon" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BanHoaChat</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BanHoaChat.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
                body {
                    background-color: #f5f6fa;
                    line-height: 1.6;
                }
        .why-choose-us {
                    padding: 40px 20px;
                    text-align: center;
                    background-color: #fff;
                    margin: 20px 0;
                    border-radius: 10px;
                    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
                }

                .why-choose-us h2 {
                    color: #004aad;
                    font-size: 32px;
                    margin-bottom: 30px;
                    font-weight: 700;
                }

                .character-img {
                    max-width: 100%;
                    height: auto;
                    margin-bottom: 20px;
                }

                .feature-box {
                    background-color: #fff;
                    border: 1px solid #ddd;
                    border-radius: 8px;
                    padding: 20px;
                    margin: 15px 0;
                    transition: transform 0.3s ease, box-shadow 0.3s ease;
                }

                .feature-box:hover {
                    transform: translateY(-5px);
                    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
                }

                .feature-box i {
                    font-size: 36px;
                    color: #f4a261;
                    margin-bottom: 15px;
                }

                .feature-box h3 {
                    color: #004aad;
                    font-size: 18px;
                    margin-bottom: 10px;
                }

                .feature-box p {
                    color: #666;
                    font-size: 14px;
                    line-height: 1.5;
                }
                /* Custom Navbar */
                .navbar {
                    background-color: #004aad;
                    padding: 15px 20px;
                    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
                }

                .navbar-brand {
                    font-size: 26px;
                    font-weight: 700;
                    letter-spacing: 1px;
                    color: #ffd700 !important;
                }

                .navbar-nav .nav-link {
                    color: white !important;
                    font-size: 16px;
                    font-weight: 500;
                    padding: 8px 15px;
                    border-radius: 5px;
                    transition: background-color 0.3s ease, color 0.3s ease;
                }

                .navbar-nav .nav-link:hover {
                    background-color: #ffd700;
                    color: #004aad !important;
                }

                .navbar-toggler {
                    border: none;
                }

                .navbar-toggler-icon {
                    background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 30 30'%3e%3cpath stroke='rgba%28255, 215, 0, 1%29' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e");
                }

                /* Banner */
                .carousel-item {
                    height: 400px;
                }

                .carousel-item img {
                    object-fit: cover;
                    height: 100%;
                }

                .carousel-caption h1 {
                    font-size: 36px;
                    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
                }

                .carousel-caption p {
                    font-size: 18px;
                }

                .carousel-caption .btn {
                    background-color: #ffd700;
                    color: #004aad;
                    border: none;
                    padding: 10px 20px;
                    font-size: 16px;
                    transition: background-color 0.3s ease;
                }

                .carousel-caption .btn:hover {
                    background-color: #e6c200;
                }

                /* Featured Products */
                .featured-products {
                    padding: 40px 20px;
                }

                .featured-products h2 {
                    color: #004aad;
                    text-align: center;
                    margin-bottom: 30px;
                }

                .product-card .card {
                    border: 1px solid #ddd;
                    border-radius: 8px;
                    transition: transform 0.3s ease, box-shadow 0.3s ease;
                }

                .product-card .card:hover {
                    transform: translateY(-5px);
                    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
                }

                .product-card img {
                    height: 180px;
                    object-fit: cover;
                }

                .product-card .card-title {
                    font-size: 18px;
                    color: #333;
                }

                .product-card .card-text.price {
                    color: #004aad;
                    font-size: 16px;
                    font-weight: 500;
                }

                .product-card .card-text.details {
                    color: #666;
                    font-size: 14px;
                }

                .product-card .btn {
                    background-color: #004aad;
                    border: none;
                    border-radius: 0 0 8px 8px;
                }

                .product-card .btn:hover {
                    background-color: #003087;
                }

                /* About Section */
                .about {
                    background-color: #fff;
                    padding: 40px 20px;
                    text-align: center;
                }

                .about h2 {
                    color: #004aad;
                    margin-bottom: 20px;
                }

                /* Footer */
                footer {
                    background-color: #004aad;
                    color: white;
                    padding: 20px;
                    text-align: center;
                }

                footer a {
                    color: #ffd700;
                    text-decoration: none;
                }

                footer a:hover {
                    text-decoration: underline;
                }

                /* Responsive Adjustments */
        @@media (max-width: 1024px) {
                    .carousel-item {
                        height: 350px;
                    }

                    .carousel-caption h1 {
                        font-size: 28px;
                    }

                    .carousel-caption p {
                        font-size: 16px;
                    }

                    .product-card img {
                        height: 160px;
                    }
                }

        @@media (max-width: 768px) {
                    .character-img{
                        width: 200px !important;
                    }
                    .why-choose-us h2 {
                        font-size: 26px;
                    }

                    .feature-box {
                        padding: 15px;
                    }

                    .feature-box h3 {
                        font-size: 16px;
                    }

                    .feature-box p {
                        font-size: 13px;
                    }
                    .carousel-item {
                        height: 300px;
                    }

                    .carousel-caption h1 {
                        font-size: 24px;
                    }

                    .carousel-caption p {
                        font-size: 14px;
                    }

                    .carousel-caption .btn {
                        padding: 8px 15px;
                        font-size: 14px;
                    }

                    .featured-products h2 {
                        font-size: 26px;
                    }

                    .product-card .card-title {
                        font-size: 16px;
                    }

                    .product-card .card-text.price {
                        font-size: 14px;
                    }

                    .about h2 {
                        font-size: 26px;
                    }
                }

        @@media (max-width: 480px) {
                    .character-img{
                        text-align: justify;
                        width: 20% !important;
                        height: 30% !important;
                    }
                    .why-choose-us h2 {
                        font-size: 22px;
                    }

                    .feature-box {
                        padding: 10px;
                    }

                    .feature-box h3 {
                        font-size: 14px;
                    }

                    .feature-box p {
                        font-size: 12px;
                    }
                    .navbar-brand {
                        font-size: 22px;
                    }

                    .carousel-item {
                        height: 250px;
                    }

                    .carousel-caption h1 {
                        font-size: 20px;
                    }

                    .carousel-caption p {
                        font-size: 12px;
                    }

                    .carousel-caption .btn {
                        padding: 6px 12px;
                        font-size: 12px;
                    }

                    .featured-products {
                        padding: 20px 10px;
                    }

                    .featured-products h2 {
                        font-size: 22px;
                    }

                    .product-card img {
                        height: 140px;
                    }

                    .product-card .card-title {
                        font-size: 14px;
                    }

                    .product-card .card-text.price {
                        font-size: 13px;
                    }

                    .product-card .card-text.details {
                        font-size: 12px;
                    }

                    .about h2 {
                        font-size: 22px;
                    }

                    footer p {
                        font-size: 12px;
                    }
                }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">SoChemVN</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Trang chủ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#products">Sản phẩm</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#about">Giới thiệu</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#contact">Liên hệ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#cart">Giỏ hàng</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <p>© 2025 SoChemVN. All rights reserved.</p>
        <p><a href="#contact">Liên hệ</a> | <a href="#privacy">Chính sách bảo mật</a> | <a href="#terms">Điều khoản sử dụng</a></p>
    </footer>

    <!-- Bootstrap 5 JS and Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
